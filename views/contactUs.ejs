
  <div class="uk-margin uk-margin-right uk-padding-large">

        <form class="add-form-box" action="/home/contact" method="POST">

           <label>  Email </label>
           <input type="text" class="uk-input" name="contact_email" > 
           <label> Massage </label>
           <textarea class="uk-textarea" name="contact_msg"> </textarea>
           <div class="uk-margin-small"> 
            <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom"> 
              Send
            </button>
            
          </div>

          <% if(typeof errors != 'undefined') {%> 
            <% if (errors.length == 1) { %> 
            <span style="color: red; font-size: 11px;"> <%= errors %> </span>
          <% } else if (errors.length == 2) {%> 
            <span style="color: red; font-size: 11px;">  either the email or the message are invalid </span>
          <% }} %> 
        </form>

    </div>   







