
        <div id="profile" class="uk-margin">


        <form class="add-form-box" method="post" action="/profile">


          <% if(typeof user != 'undefined') { %>
          <label> First Name </label>
          <input class="uk-input" name="name" value="<%= user.first_name %> " >
          <label> First Name </label>
          <input class="uk-input" name="name" value="<%= user.family_name %> " >
          <label> Email </label>
          <input class="uk-input" name="email" value="<%= user.email %> "> 
          <label> Phone number </label>
          <input class="uk-input" name="phone_number" value="<%= user.phone_number %>"> 
          <label> Gander </label>
          <select name="gander" class="uk-select"  value="<%= user.gander %> ">
              <option value="Female"> Female </option>
              <option value="Male"> Male </option>
          </select>

          <label> Job Title </label>
          <select name="job_title" class="uk-select" value="<%= user.job_title %>">
            <option value="Consultant Psychiatrist"> Consultant Psychiatrist </option>
            <option value="Practitioner Psychologist"> Practitioner Psychologist</option>
            <option value="Senior Psychologist">Senior Psychologist</option>
          </select>

          <label> Date of birth </label>
          <input type="date" class="uk-input" name="birth_date" value="<%= user.birth_date %>"> 
          
          <% } %> 
  
          <div class="uk-margin-top">
            <a href="/rest/therapist/:<%= user.therapist_id %> " class="uk-button uk-button-danger  uk-margin "> Rest Password </a>
          </div>
           <div id="last-button">
            <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small"> Save Change </button>
           </div>

        </form>
        </div>
           

    
    
    
